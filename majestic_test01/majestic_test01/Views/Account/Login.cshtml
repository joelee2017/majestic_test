@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <!--<link href="~/js/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />

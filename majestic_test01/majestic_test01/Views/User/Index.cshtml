@model List<AccountModel>
@{
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Striped Table</h4>
                        <p class="card-description">
                            Add class <code>.table-striped</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            大頭貼
                                        </th>
                                        <th>
                                            姓名
                                        </th>
                                        <th>
                                            信箱
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int idx = 1;
                                    }
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td class="py-1">
                                                <img src="~/images/faces/face@(idx).jpg" alt="image" />
                                            </td>

                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.Email
                                            </td>
                                            <td>                     
                                                <a class="btn btn-warning" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">編輯</a>
                                            </td>
                                        </tr>
                                        idx++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

